{% extends "base.twig" %}

{% block main %}

  <div data-template="page-home.twig">
    
    <!-- home hero -->
    <section id="home-hero-section" class="">
      <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider="autoplay: true; autoplay-interval: 6000">
        <ul class="uk-slider-items uk-child-width-1-1">
          
          {% for post in home_slides %}
          {% if post.thumbnail %}
            {% set thumb_src = post.thumbnail.src('dc-brochure-theme-hero') %}
          {% else %}
            {% set thumb_src = site_default_img %}
          {% endif %}
          <li>
            <div>
              <div class="uk-light wrap uk-background-norepeat uk-background-cover uk-background-center-center uk-cover-container uk-background-secondary">
                <img data-src="{{thumb_src}}" alt="" uk-cover uk-img>
                <div class="uk-flex uk-flex-center uk-flex-middle uk-position-z-index uk-position-relative hero-overlay">
                  <div class="uk-container uk-container-small uk-flex-auto uk-text-center">
                    <div class="uk-section uk-section-large">
                      <h1 class="uk-heading-primary animate" style="font-weight: 700;">{{post.title}}</h1>
                      {{post.content}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </li>
          {% endfor %}
          
        </ul>
      </div>
    </section>
    <!-- /home hero -->
    
    <!-- home tabbed about -->
    <section id="home-about-section" class="uk-section uk-section-default">
      <div class="uk-container">
        <div class="uk-section uk-section-small uk-padding-remove-top">
          <ul class="uk-subnav uk-subnav-pill uk-flex uk-flex-center" uk-switcher="connect: .uk-switcher; animation: uk-animation-fade">
            {% for post in home_about_tabs %}
            <li>
              <a class="uk-border-pill" href="#">{{post.title}}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
        
        <ul class="uk-switcher uk-margin">
          
          {% for post in home_about_tabs %}
          <li>
            {{post.content}}
          </li>
          {% endfor %}
          
        </ul>
        
      </div>
    </section>
    <!-- /home tabbed about -->
    
    <!--  -->
    <section class="uk-section uk-section-muted uk-section-large">
    	
    	<div class="uk-container uk-container-xsmall uk-text-center uk-section uk-padding-remove-top">
    		<h5 class="uk-text-primary">WHAT WE OFFER</h5>
    		<h2 class="uk-margin-remove uk-h1">APPLIANCES WE REPAIR</h2>
    	</div>
    	
      <div class="uk-container">
        <div class="uk-grid uk-child-width-1-2 uk-child-width-1-3@m" uk-grid="masonry: true" uk-scrollspy="target: > div; delay: 150; cls: uk-animation-slide-bottom-medium">
    			
          {% for post in services_posts %}
          <div class="uk-text-center">
            <img data-src="{{post.thumbnail.src('dc-brochure-theme-service-featured')}}" alt="{{post.thumbnail.alt}}" uk-img>
    				<h4 class="uk-margin-small-bottom uk-margin-top uk-margin-remove-adjacent">{{post.title}}</h4>
            <a class="uk-button uk-button-primary uk-button-small" href="{{post.link}}">Read more</a>
    			</div>
          {% endfor %}
    			
    		</div>
    	</div>
    	
    </section>
    <!-- /services grid -->
    
    <!-- tesimonials -->
    {% include 'testimonials-section.twig' %}
    <!-- / tesimonials -->
    
    <!-- logos -->
    {% include 'logos-section.twig' %}
    <!-- /logos -->

  </div>

{% endblock %}