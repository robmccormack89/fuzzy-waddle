{% extends "base.twig" %}

{% block main %}

<div class="uk-section" data-template="single.twig">
  <div class="uk-container">
    <div class="uk-grid-large" uk-grid>
    
      <article id="post-{{post.ID}}" class="post-type-{{ post.post_type }} uk-article uk-width-2-3@m {{post.class}}">
        
        <h1 class="uk-article-title">{{ post.title }}</h1>
        
        {% if post.post_type == "post" %}
        <p class="uk-article-meta">
          Written on {{post.date | date}}.
          Posted in 
          {% for category in post.categories %}
            {% if not loop.last %}
              <a title="{{ category }}" href="{{ category.link }}">{{ category }}</a>,
            {% endif %}
            {% if loop.last %}
              <a title="{{ category }}" href="{{ category.link }}">{{ category }}</a>
            {% endif %}
          {% endfor %}
        </p>
        {% endif %}
        
        {% if post.thumbnail %}
        <figure>
          <img data-src="{{ post.thumbnail.src('dc-brochure-theme-featured-image-archive') }}" width="800" height="300" alt="{{ post.thumbnail.alt }}" uk-img>
        </figure>
        {% endif %}

        {{ post.content }}

      </article>

      {% include 'sidebar.twig' %}

    </div>
  </div>
</div>

{% endblock %}